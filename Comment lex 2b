#include <stdio.h>
#include <string.h>
int main() {
    char input[100];
    int length, i, is_comment = 0;

    printf("Enter a line: ");
    fgets(input, 100, stdin);

    length = strlen(input);

    if (length >= 4 && input[0] == '/' && input[1] == '*') {
        for (i = 2; i < length - 1; i++) {
            if (input[i] == '*' && input[i+1] == '/') {
                is_comment = 1;
                break;
            }
        }
    }

    if (is_comment) {
        printf("The input is a comment.\n");
    } else {
        printf("The input is not a comment.\n");
    }

    return 0;
}
